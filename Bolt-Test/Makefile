  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/linux-x86_64/Debug/Bolt-Test
  TARGET = $(TARGETDIR)/Bolt-Test
  OBJDIR = ../bin/int/linux-x86_64/Debug/Bolt-Test
  DEFINES += -DBT_ENABLE_DEBUG
  INCLUDES += -Iinclude -I../Bolt-Core/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/linux-x86_64/Debug/Bolt-Core/libBolt-Core.a ../bin/linux-x86_64/Debug/Bolt-imgui/libBolt-imgui.a -lglfw
