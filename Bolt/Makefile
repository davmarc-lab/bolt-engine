ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/Debug-linux-x86_64/Bolt
  TARGET = $(TARGETDIR)/libBolt.so
  OBJDIR = ../bin-int/Debug-linux-x86_64/Bolt
  DEFINES += -DBT_BUILD_DLL -DBT_ENABLE_DEBUG
  INCLUDES += -Idependencies/spdlog/include -Idependencies/glad/include -Idependencies/imgui -Idependencies/glm
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -fPIC
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -fPIC -std=c++17
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += -lglm -lGL -lglfw -lX11 -lXrandr -lXi -ldl
  LDDEPS +=
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -shared -Wl,-soname=libBolt.so -s
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
	@echo Running postbuild commands
	cp -rf ../bin/Debug-linux-x86_64/Bolt/libBolt.so ../bin/Debug-linux-x86_64/Platform
  endef
all: prebuild prelink $(TARGET)
	@:

endif

