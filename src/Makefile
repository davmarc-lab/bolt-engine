# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  BoltEngine_config = debug
endif
ifeq ($(config),release)
  BoltEngine_config = release
endif

PROJECTS := BoltEngine

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

BoltEngine:
ifneq (,$(BoltEngine_config))
	@echo "==== Building BoltEngine ($(BoltEngine_config)) ===="
	@${MAKE} --no-print-directory -C . -f BoltEngine.make config=$(BoltEngine_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f BoltEngine.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   BoltEngine"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"